<%- include ('../partials/header') %>

<div class="container my-5">
  <header>
    <h1>Languages Registered</h1>
  </header>

  <hr>

  <div class="content">
    <% for (let language of languages) { %>
      <div class="card my-5">
        <div class="card-header">
          <h5 class="card-title">
           for: <%= language.language %>
           <% console.log(language) %>
          </h5>
        </div>

        <div class="card-body">
          <p class="card-text">
            You are registered for <strong><%= language.language %></strong> <%= language.level %> learning for <strong><%= language.hoursPerWeek %></strong> hours per week.
          </p>
        </div>

        <div class="card-footer text-muted">
          <a href="/languages/<%= language._id %>/edit"><i class="fa fa-edit">&nbsp;</i>Change your registered course</a>
          <br>
          <form class="form-inline" action="/languages/delete" method="post" onsubmit="return confirm('Are you sure you want to cancel the registered course?');">
            <input type="hidden" value="<%= language._id %>" name="id">
            <button class="delete" type="submit">
              <i class="fa fa-trash">&nbsp;</i>
              Delete course
            </button>
          </form>
        </div>
      </div>
    <% } %>
  </div>
</div>

<%- include ('../partials/footer') %>